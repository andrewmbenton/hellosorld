{
  "hosting": [ {
    "site": "benton-io",
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "**/_*"
    ],
    "redirects": [
      {
        "source": "/",
        "destination": "https://blog.benton.io/",
        "type": 302
      },
      {
        "source": "/:path*",
        "destination": "https://archive.benton.io/:path",
        "type": 301
      }
    ]
  },
  {
    "site": "archive-benton-io",
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "**/_*"
    ]
  } ]
}
